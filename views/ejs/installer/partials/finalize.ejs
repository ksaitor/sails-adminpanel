<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Installation Progress</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 h-screen flex items-center justify-center">
<div class="max-w-md bg-white p-8 rounded shadow-md w-full">
    <h1 class="text-2xl font-bold mb-4">Installation Progress</h1>
    <div class="mb-6">
        <!-- Progress bar -->
        <div class="relative pt-1">
            <div class="flex mb-2 items-center justify-between">
                <div>
                        <span class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-teal-600 bg-teal-200">
                            Overall Status
                        </span>
                </div>
                <div class="text-right">
                        <span class="text-xs font-semibold inline-block text-teal-600">
                            <%= status %>
                        </span>
                </div>
            </div>
            <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-teal-200">
                <div style="width: <%= progressBarWidth %>%;" class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-teal-500"></div>
            </div>
        </div>

        <!-- Step statuses -->
        <div>
            <h2 class="text-lg font-bold mb-2">Step Statuses</h2>
            <ul>
                <% finalizeList.forEach(item => { %>
                    <li class="flex items-center mb-2">
                        <span class="mr-2"><%= item.id %></span>
                        <span><%= item.description %></span>
                        <span class="ml-auto">
                                <span class="text-xs font-semibold inline-block <%= item.status === 'fulfilled' ? 'text-green-600' : item.status === 'pending' ? 'text-yellow-600' : 'text-red-600' %>">
                                    <%= item.status %>
                                </span>
                            </span>
                    </li>
                <% }); %>
            </ul>
        </div>
    </div>
</div>
</body>
</html>
