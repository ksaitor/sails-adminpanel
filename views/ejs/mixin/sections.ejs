<% var sections = (adminpanel.configHelper.getConfig()).sections %>
<% var globalSettings = (adminpanel.configHelper.getConfig()).globalSettings %>
<% var routePrefix = (adminpanel.configHelper.getConfig()).routePrefix %>

<% if (Array.isArray(sections)) { %>
  <nav class="px-12 md:px-5 h-9 border-b border-gray-300 bg-white dark:bg-gray-800 dark:border-slate-100">
    <ul class="flex h-full items-center gap-6">
        <li>
          <a class="nav-link" <% if (section && section === "adminpanel") { %> active <% } %> href="<%=routePrefix%>"><i class="las la-sliders-h"></i>  <%= __("Adminpanel") %></a>
        </li>
        <% if (globalSettings.enableMigrations) { %>
            <li>
                <a class="nav-link" <% if (section && section === "migrations") { %> active <% } %> href="<%=routePrefix%>/migrations"><i class="las la-sliders-h"></i>  <%= __("Migrations") %></a>
            </li>
        <% } %>
        <% sections.forEach(function(itemSection) { %>
          <% if (itemSection.link && itemSection.title) { %>
          <li>
            <a class="nav-link" <% if ( itemSection.id && section == itemSection.id) { %>active<% } %> href="<%=itemSection.link%>"><% if (itemSection.icon) { %> <i class="las la-<%=itemSection.icon%>"></i><% } %> <%= __(itemSection.title) %></a>
          </li>
          <% } %>
        <% }) %>
      </ul>
  </nav>
<% } %>
