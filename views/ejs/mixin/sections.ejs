<% var sections = (adminpanel.configHelper.getConfig()).sections %>
<% var globalSettings = (adminpanel.configHelper.getConfig()).globalSettings %>
<% var routePrefix = (adminpanel.configHelper.getConfig()).routePrefix %>
<% if (Array.isArray(sections)) { %>
    <nav class="px-12 h-9 border-b border-gray-300 bg-white dark:bg-gray-800 dark:border-slate-100 md:mt-[60px] relative">
        <div class="nav-button-prev absolute left-[20px] top-[4px] hover:text-blue-500"><i class="las la-angle-left text-lg transition"></i></div>
        <swiper-container class="cursor-move nav-swiper" init="false">
            <swiper-slide class="w-auto justify-center flex items-center h-9">
                <a class="nav-link"
                <% if (section && section === "adminpanel") { %> active
                        <% } %>
                   href="<%= routePrefix %>"><i class="las la-sliders-h"></i> <%= __("Adminpanel") %></a>
            </swiper-slide>
            <% if (globalSettings.enableMigrations) { %>
                <swiper-slide class="w-auto justify-center flex items-center h-9">
                    <a class="nav-link"
                    <% if (section && section === "migrations") { %> active
                            <% } %>
                       href="<%= routePrefix %>/migrations"><i class="las la-sliders-h"></i> <%= __("Migrations") %></a>
                </swiper-slide>
            <% } %>
            <% sections.forEach(function(itemSection) { %>
                <% if (itemSection.link && itemSection.title) { %>
                    <swiper-slide class="w-auto justify-center flex items-center h-9">
                        <a class="nav-link" <% if ( itemSection.id && section == itemSection.id) { %>active
                                <% } %>
                           href="<%= itemSection.link %>">
                            <% if (itemSection.icon) { %>
                                <i class="las la-<%= itemSection.icon %>"></i>
                            <% } %>
                            <%= __(itemSection.title) %></a>
                    </swiper-slide>
                <% } %>
            <% }) %>
        </swiper-container>
        <div class="nav-button-next absolute right-[15px] top-[4px] hover:text-blue-500"><i class="las la-angle-right text-lg transition"></i></div>
    </nav>
    <script>
		const nav_swiperEl = document.querySelector('.nav-swiper');
		// swiper parameters
		const swiperParams = {
			slidesPerView: 'auto',
			speed: 500,
			navigation: {
				nextEl: '.nav-button-next',
				prevEl: '.nav-button-prev',
			},
			spaceBetween: 30,
			on: {
				init: function () {
					setTimeout(function () {
						nav_swiperEl.setAttribute('style', 'width: calc(100vw - 96px)')
					}, 100)
				},
			},
		};

		// now we need to assign all parameters to Swiper element
		Object.assign(nav_swiperEl, swiperParams);

		// and now initialize it
		nav_swiperEl.initialize();
    </script>
<% } %>
