<% include head %>
<% include headContent %>

<form action="<%= instance.uri %>/add" method="POST">
    <div class="layout">
        <h1><%= __("Group settings") %></h1>
        <input type="text" id="name" name="name" placeholder="<%= __("Group name") %>">
        <textarea id="description" name="description" placeholder="<%= __("Group description") %>"></textarea>
    </div>
    <div class="layout">
        <label for="members"><%= __("Members") %></label>
        <ul id="members">
            <% for (let user of users) { %>
                <li id="user-<%= user.id %>">
                    <label for="checkbox-<%= user.id %>"><%= user.fullName %></label>
                    <input type="checkbox" id="checkbox-<%= user.id %>" name="checkbox-<%= user.id %>">
                </li>
            <% } %>
        </ul>
    </div>
    <div class="layout">
        <input raised class="btn-save" type="submit" value="<%= __("Save") %>">
    </div>
</form>
