<% include head %>
<% include headContent %>

<form action="<%= instance.uri %>/add" method="POST">
    <div class="layout">
        <h2><%= __("User settings") %></h2>
        <div class="clr-row">
            <div class="clr-col-6">
                <input type="text" id="userLogin" name="login" placeholder="<%= __("Login") %>">
            </div>
            <div class="clr-col-6">
                <input type="text" id="fullName" name="fullName" placeholder="<%= __("Full name") %>">
            </div>
            <div class="clr-col-6">
                <input type="email" id="email" name="email" placeholder="<%= __("E-mail") %>">
            </div>
            <div class="clr-col-6">
                <input type="password" id="userPassword" name="password" placeholder="<%= __("Password") %>">
            </div>
            <div class="clr-col-6">
                <label><%= __("Timezone") %>: </label>
                <select id="timezone" name="timezone">
                    <option selected>UTC</option>
                    <option>GMT+1</option>
                    <option>GMT+2</option>
                    <option>GMT+3</option>
                    <option>GMT+4</option>
                    <option>GMT+5</option>
                    <option>GMT+6</option>
                    <option>GMT+7</option>
                </select>
            </div>
            <div class="clr-col-6">
                <label><%= __("Profile expires") %>: </label>
                <input type="date" id="date" name="date">
            </div>
            <div class="clr-col-6">
                <label><%= __("Locale") %>: </label>
                <select id="locale" name="locale">
                    <option selected><%= __("EN") %></option>
                    <option><%= __("UA") %></option>
                    <option><%= __("RU") %></option>
                    <option><%= __("DE") %></option>
                </select>
            </div>
        </div>
    </div>
    <div class="layout">
        <h2><%= __("User's groups") %></h2>
        <% for (let group of groups) { %>
            <label for="checkbox-<%= group.id %>"><%= group.name %></label>
            <input type="checkbox" id="checkbox-<%= group.id %>" name="checkbox-<%= group.id %>">
        <% } %>
    </div>
    <div class="layout">
        <input raised class="btn-save" type="submit" value="<%= __("Save") %>">
    </div>
</form>
